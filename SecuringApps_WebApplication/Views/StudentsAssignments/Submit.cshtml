@model ShoppingCart.Application.ViewModels.StudentAssignmentViewModel

@{
    ViewData["Title"] = "Submit";
}

<h1>Submit</h1>

<h4>Submit Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Submit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input name="file" class="form-control" type="file" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            @if (!Model.Submitted)
            {
            <div class="form-group">
                <input type="submit" asp-route-id="id" value="Save" class="btn btn-primary" />
            </div>}
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
